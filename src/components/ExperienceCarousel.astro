---
import Carousel from '@components/Carousel.astro'
import '@styles/components/ExperienceCarousel.css'
import {type ExperienceAsset} from "../types/Asset";
import Button from "@components/Button.astro";
import Info from "@icons/Info.astro";
const {assets, params} = Astro.props
const {title, history} = params
---
<Carousel title={title} classNames="job">
    {assets.map(({classNames, company, title, description, href, transitionName}: ExperienceAsset) =>
            <a class="asset-link" href={href}>
                <article class=`asset ${classNames}` data-astro-history={history ?? 'auto'}>
                    <section class="company-info">
                        <h3 class="title">{company}</h3>
                    </section>
                    <section class="metadata">
                        <h2 transition:name={transitionName} class="role">{title}</h2>
                        <p class="description">{description}</p>
                    </section>
                </article>
            </a>
    )}
</Carousel>
