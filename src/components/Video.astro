---
import {getObjectUrl} from "@services/cloud/cloud";

const videoSrc = getObjectUrl('me_vid_2.mp4').toString()
---

<video class="video hidden" preload="none" playsinline>
    <source src={videoSrc} type="video/mp4">
</video>

<style>
    video {
        width: 100%;
        height: inherit;
        object-fit: cover;
        grid-column: 1;
        transition: opacity 1s var(--smooth-transition-function);
        opacity: 1;

        &.visible {
            opacity: 1;
        }

        &.hidden {
            opacity: 0;
        }
    }
</style>