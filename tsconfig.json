{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/styles/*"],
      "@icons/*": ["src/icons/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@fontsource/*": ["node_modules/@fontsource/*", "node_modules/@fontsource-variable/*"],
    }
  }
}
